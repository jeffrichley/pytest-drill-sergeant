{
  "name": "pytest-drill-sergeant",
  "displayName": "Pytest Drill Sergeant",
  "description": "AI test quality enforcement tool with military-themed feedback",
  "version": "1.0.0-dev",
  "publisher": "jeffrichley",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Testing",
    "Other"
  ],
  "keywords": [
    "pytest",
    "testing",
    "quality",
    "ai",
    "linting",
    "drill-sergeant"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "extensions": [".py"]
      }
    ],
    "configuration": {
      "title": "Pytest Drill Sergeant",
      "properties": {
        "pytest-drill-sergeant.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable drill sergeant analysis"
        },
        "pytest-drill-sergeant.persona": {
          "type": "string",
          "default": "drill_sergeant",
          "enum": ["drill_sergeant", "snoop_dogg"],
          "description": "Choose your drill sergeant persona"
        },
        "pytest-drill-sergeant.severity": {
          "type": "string",
          "default": "warning",
          "enum": ["error", "warning", "info", "hint"],
          "description": "Minimum severity level to show"
        },
        "pytest-drill-sergeant.analyzeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Analyze test files when saved"
        }
      }
    },
    "commands": [
      {
        "command": "pytest-drill-sergeant.analyzeFile",
        "title": "Analyze Current File",
        "category": "Drill Sergeant"
      },
      {
        "command": "pytest-drill-sergeant.showReport",
        "title": "Show Analysis Report",
        "category": "Drill Sergeant"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .py",
          "command": "pytest-drill-sergeant.analyzeFile",
          "group": "drill-sergeant"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
